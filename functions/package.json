{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "tslint -c ./tslint.json './*/*.ts' './*.ts' -e './node_modules'",
    "serve": "(tsc || true) && firebase serve --only functions",
    "serve-h": "(tsc || true) && firebase serve --only functions,hosting",
    "shell": "(tsc || true) && firebase experimental:functions:shell",
    "start": "(tsc || true) && npm run shell",
    "deploy": "(tsc || true) && firebase deploy --only functions",
    "logs": "(tsc || true) && firebase functions:log",
    "precommit": "pretty-quick --staged",
    "build": "tsc",
    "test":
      "NODE_ENV=test ./node_modules/mocha/bin/mocha -r ts-node/register --recursive \"test/**/*.test.ts\"",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-query-boolean": "^2.0.0",
    "firebase-admin": "^5.13.1",
    "firebase-functions": "^0.8.2",
    "joi": "^13.6.0",
    "joi-phone-number": "^2.0.11",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/joi": "^13.4.2",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "husky": "^0.14.3",
    "mocha": "^6.0.2",
    "mock-cloud-firestore": "0.9.2",
    "prettier": "1.11.1",
    "pretty-quick": "^1.6.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "private": true
}
